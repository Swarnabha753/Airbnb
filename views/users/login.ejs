<% layout("/layouts/boilerplate") -%>


<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form  method="POST" action="/login" novalidate class=" needs-validation" >
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable> </br>
                <input name="username"
                id="username"
                placeholder="Give your Username"
                 type="text" 
                 class="form-control"
                required
                />
            </div>
            <div class="mb-3">
                <lable for="password" class="form-lable">Password</lable></br>
                <input name="password"
                id="password"
                 type="password" 
                 class="form-control"
                required
                />
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>